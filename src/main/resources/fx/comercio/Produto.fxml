<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fx.comercio.controllers.ProdutoController"
            prefHeight="400.0" prefWidth="1000.0">

    <children>
        <HBox prefHeight="50.0" spacing="10.0" style="-fx-background-color: #007BFF;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" alignment="BASELINE_CENTER">
            <children>
                <Label text="PRODUTOS" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-alignment: CENTER" />
            </children>
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
            </padding>
        </HBox>

        <HBox spacing="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0">
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
            </padding>
            <Button text="Criar" style="-fx-background-color: #007BFF; -fx-text-fill: white;" />
            <Label text="Pesquisar:" />
            <TextField fx:id="searchField" HBox.hgrow="ALWAYS" />
        </HBox>

        <TableView fx:id="productTable" prefHeight="300.0" maxWidth="Infinity" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0">
            <columns>
                <TableColumn fx:id="colCodProd" text="Código" prefWidth="100.0" />
                <TableColumn fx:id="colDescricao" text="Descrição" prefWidth="200.0" />
                <TableColumn fx:id="colPrecoCompra" text="Preço Compra" prefWidth="100.0" />
                <TableColumn fx:id="colPrecoVenda" text="Preço Venda" prefWidth="100.0" />
                <TableColumn fx:id="colCodBarra" text="Código de Barra" prefWidth="100.0" />
                <TableColumn fx:id="colNcm" text="NCM" prefWidth="100.0" style="-fx-alignment: CENTER-LEFT;"/>
            </columns>
        </TableView>

        <HBox spacing="5.0" alignment="CENTER_RIGHT" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="10.0">
            <Button styleClass="btn-primary" text="Voltar" onAction="#voltarMenu"></Button>
            <Button text="Excluir" style="-fx-background-color: #FF4C4C; -fx-text-fill: white;" />
            <Button text="Atualizar" style="-fx-background-color: #007BFF; -fx-text-fill: white;" />
        </HBox>
    </children>

    <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
    </padding>
</AnchorPane>
